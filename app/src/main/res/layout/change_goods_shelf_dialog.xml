<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/rectangle_soild_white_shape"
              android:gravity="center_vertical"
              android:minWidth="280dp"
              android:orientation="vertical"
              android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_shelf2"
            android:textColor="@color/goods_name_color"
            android:textSize="@dimen/goods_market_price_size"/>

        <Spinner
            android:id="@+id/change_goods_shelf_dialog_spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:dropDownSelector="@drawable/classify_title_unselect_bg"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:background="@color/divier"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_goods_shelf_dialog_sure_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_selector"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/goods_name_color"
            android:textSize="@dimen/goods_market_price_size"/>

        <View
            android:layout_width="@dimen/split_line_height"
            android:layout_height="match_parent"
            android:background="@color/divier"/>

        <TextView
            android:id="@+id/change_goods_shelf_dialog_stop_sales_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_selector"
            android:gravity="center"
            android:text="@string/stop_sales"
            android:textColor="@color/goods_name_color"
            android:textSize="@dimen/goods_market_price_size"/>
    </LinearLayout>
</LinearLayout>