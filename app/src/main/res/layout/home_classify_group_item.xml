<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/home_group_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

    <LinearLayout
        android:id="@+id/home_group_info_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="新鲜水果 "
            android:textColor="@color/goods_name_color"
            android:textSize="21sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/home_goup_bottom_line"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/home_group_info_lay"
        android:layout_toStartOf="@id/home_group_info_lay"
        android:src="@drawable/home_group_left_icon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/home_group_info_lay"
        android:layout_toRightOf="@id/home_group_info_lay"
        android:src="@drawable/home_group_right_icon"/>

    <TextView
        android:id="@+id/home_group_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="end"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="@string/more"
        android:textSize="@dimen/goods_market_price_size"/>
</RelativeLayout>