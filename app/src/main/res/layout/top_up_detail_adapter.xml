<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <!-- 充值流水号-->
        <TextView
            android:id="@+id/top_up_detail_adapter_tradeNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="201654558548"
            android:textSize="@dimen/goods_market_price_size"
            android:textColor="@color/goods_market_price_color"/>
        <!-- 充值状态-->
        <TextView
            android:id="@+id/top_up_detail_adapter_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失败"
            android:textSize="@dimen/goods_market_price_size"
            android:textColor="@color/red_and_gray_text_selector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <!-- 充值金额-->
        <TextView
            android:id="@+id/top_up_detail_adapter_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥:200.0"
            android:textSize="20sp"
            android:textColor="@color/goods_name_color"/>
        <!-- 充值时间-->
        <TextView
            android:id="@+id/top_up_detail_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-24 17:08:25"
            android:textSize="@dimen/goods_market_price_size"
            android:textColor="@color/red_and_gray_text_selector"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:background="@color/divier2"/>
</LinearLayout>