<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/app_icon"/>

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="V1.0"
        android:textColor="@color/goods_sales_color"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/about_company_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/company_info"
        android:textColor="@color/goods_sales_color"
        android:textSize="@dimen/goods_market_price_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/about_company_info"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rectangle_yellow_shape"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_check_version_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/check_update"
            android:textColor="@color/tab_text_color_select"
            android:textSize="@dimen/goods_name_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_height"
            android:background="@color/tab_text_color_select"/>
        <TextView
            android:id="@+id/about_clear_cache_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/calculation"
            android:textColor="@color/tab_text_color_select"
            android:textSize="@dimen/goods_name_size"/>
    </LinearLayout>
</RelativeLayout>