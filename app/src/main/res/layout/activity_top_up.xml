<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="29.3dp"
        android:paddingLeft="45.3dp"
        android:paddingRight="45.3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/top_up_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/weixin_top_up"
            android:layout_weight="1"
            android:textSize="@dimen/goods_market_price_size"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/top_up_title_text_selector"
            android:background="@drawable/top_up_title1_selector"/>
        <TextView
            android:id="@+id/top_up_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/card_top_up"
            android:layout_weight="1"
            android:textSize="@dimen/goods_market_price_size"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/top_up_title_text_selector"
            android:background="@drawable/top_up_title2_selector"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/top_up_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>