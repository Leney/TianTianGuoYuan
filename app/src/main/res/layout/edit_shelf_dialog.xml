<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="280dp"
              android:background="@drawable/rectangle_soild_white_shape"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/modify_shelf_name"
        android:textColor="@color/goods_name_color"
        android:textSize="@dimen/goods_market_price_size"/>

    <EditText
        android:id="@+id/edit_shelf_name_input"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:background="@drawable/rectangle_shape"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/goods_name_color"
        android:textSize="@dimen/goods_name_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:background="@color/divier"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_shelf_sure_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_selector"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/goods_name_color"
            android:textSize="@dimen/goods_market_price_size"/>

        <View
            android:layout_width="@dimen/split_line_height"
            android:layout_height="match_parent"
            android:background="@color/divier"/>

        <TextView
            android:id="@+id/edit_shelf_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/goods_name_color"
            android:textSize="@dimen/goods_market_price_size"/>
    </LinearLayout>
</LinearLayout>