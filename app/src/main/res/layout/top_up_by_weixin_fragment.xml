<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="23.3dp"
        android:paddingLeft="11.3dp"
        android:paddingRight="11.3dp"
        android:paddingTop="52.6dp">

        <FrameLayout
            android:id="@+id/top_up_wei_xin_item_0_lay"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/top_up_by_weixin_item_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/weixin_top_up_price_0"
                android:textColor="#424242"
                android:textSize="@dimen/goods_market_price_size"/>

            <View
                android:id="@+id/top_up_wei_xin_item_0_select_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/select_bg"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/top_up_wei_xin_item_1_lay"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/top_up_by_weixin_item_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/weixin_top_up_price_1"
                android:textColor="#424242"
                android:textSize="@dimen/goods_market_price_size"/>

            <View
                android:id="@+id/top_up_wei_xin_item_1_select_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/select_bg"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/top_up_wei_xin_item_2_lay"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/top_up_by_weixin_item_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/weixin_top_up_price_2"
                android:textColor="#424242"
                android:textSize="@dimen/goods_market_price_size"/>

            <View
                android:id="@+id/top_up_wei_xin_item_2_select_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/select_bg"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/top_up_wei_xin_item_3_lay"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/top_up_by_weixin_item_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/weixin_top_up_price_3"
                android:textColor="#424242"
                android:textSize="@dimen/goods_market_price_size"/>

            <View
                android:id="@+id/top_up_wei_xin_item_3_select_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/select_bg"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="11.3dp"
        android:paddingLeft="24dp"
        android:paddingRight="11.3dp"
        android:paddingStart="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_cash"
            android:textColor="#424242"
            android:textSize="@dimen/goods_market_price_size"/>

        <EditText
            android:id="@+id/top_up_wei_xin_input_price"
            android:layout_width="match_parent"
            android:layout_height="39.3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rectangle_shape"
            android:hint="@string/top_cash_hint"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:digits=".0123456789"
            android:textColorHint="#909090"
            android:textSize="@dimen/goods_name_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23.3dp"
        android:layout_marginTop="23.3dp"
        android:orientation="horizontal"
        android:paddingLeft="11.3dp"
        android:paddingRight="11.3dp">
        <!-- 确认充值-->
        <Button
            android:id="@+id/top_up_wei_xin_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="22.6dp"
            android:layout_marginRight="22.6dp"
            android:layout_weight="1"
            android:background="@color/classify_title_select_color"
            android:text="@string/confirm_top_up"
            android:textColor="@color/white"/>

        <!-- 取消-->
        <Button
            android:id="@+id/top_up_wei_xin_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@color/cancel_bg"
            android:text="@string/cancel"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:background="@color/divier"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.3dp"
        android:layout_marginStart="11.3dp"
        android:layout_marginTop="18.6dp"
        android:text="@string/warm_prompt2"
        android:textColor="#424242"
        android:textSize="@dimen/goods_market_price_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.3dp"
        android:layout_marginRight="11.3dp"
        android:layout_marginTop="8dp"
        android:text="@string/top_up_warm_tips"
        android:textColor="#909090"
        android:textSize="@dimen/goods_market_price_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.3dp"
        android:layout_marginStart="11.3dp"
        android:layout_marginTop="8dp"
        android:text="@string/service_phone"
        android:textColor="#080808"
        android:textSize="@dimen/goods_market_price_size"/>
</LinearLayout>